<% content_for :body_content_title do %>
  <%= @event.title_fi %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Title Fi</h1>
    <p>
      <%=raw @event.title_fi %>
    </p>
  </section>
  <section>
    <h1>Desc Fi</h1>
    <p>
      <%=raw @event.desc_fi %>
    </p>
  </section>
  <section>
    <h1>Title En</h1>
    <p>
      <%=raw @event.title_en %>
    </p>
  </section>
  <section>
    <h1>Desc En</h1>
    <p>
      <%=raw @event.desc_en %>
    </p>
  </section>
  <section>
    <h1>Date</h1>
    <p>
      <%=raw @event.date %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="events">
      <% @events.each do |event| %>
        <li>
          <%= link_to event.title_fi, event_path(event) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
