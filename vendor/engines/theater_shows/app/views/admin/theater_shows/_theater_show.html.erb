<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(theater_show) -%>">
  <span class='title'>
    <%= theater_show.title_fi %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), theater_show_path(theater_show),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_theater_show_path(theater_show),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_theater_show_path(theater_show),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => theater_show.title_fi),
        :method => :delete %>
  </span>
</li>
