<% content_for :body_content_title do %>
  <%= @theater_show.title_fi %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Title Fi</h1>
    <p>
      <%=raw @theater_show.title_fi %>
    </p>
  </section>
  <section>
    <h1>Title En</h1>
    <p>
      <%=raw @theater_show.title_en %>
    </p>
  </section>
  <section>
    <h1>Description Fi</h1>
    <p>
      <%=raw @theater_show.description_fi %>
    </p>
  </section>
  <section>
    <h1>Description En</h1>
    <p>
      <%=raw @theater_show.description_en %>
    </p>
  </section>
  <section>
    <h1>Starts</h1>
    <p>
      <%=raw @theater_show.starts %>
    </p>
  </section>
  <section>
    <h1>Ends</h1>
    <p>
      <%=raw @theater_show.ends %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="theater_shows">
      <% @theater_shows.each do |theater_show| %>
        <li>
          <%= link_to theater_show.title_fi, theater_show_path(theater_show) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
