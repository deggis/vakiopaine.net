<ul>
  <% if Admin::ExhibitionsController.searchable? %>
    <li>
      <%= render :partial => "/shared/admin/search",
                  :locals => {
                    :url => admin_exhibitions_path
                  } %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), new_admin_exhibition_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? and Admin::ExhibitionsController.sortable? and Exhibition.count > 1 %>
  <li>
    <%= link_to t('.reorder', :what => "Exhibitions"),
                 admin_exhibitions_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Exhibitions"),
                 admin_exhibitions_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>