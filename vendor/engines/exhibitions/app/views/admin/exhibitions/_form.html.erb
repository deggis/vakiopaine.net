<%= form_for [:admin, @exhibition] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
          :object => @exhibition,
          :include_object_name => true
        } %>
  
  <div class='field'>
    <%= f.label :title_fi -%>
    <%= f.text_field :title_fi, :class => 'larger widest'  -%>
  </div>
  
  <div class='field'>
    <%= f.label :title_en -%>
    <%= f.text_field :title_en  -%>
  </div>
  
  <div class='field'>
    <%= f.label :author -%>
    <%= f.text_field :author  -%>
  </div>
  
  <div class='field'>
    <div id='page-tabs' class='clearfix ui-tabs ui-widget ui-widget-content ui-corner-all'>
      <ul id='page_parts'>
        <% [:description_fi, :description_en].each_with_index do |part, part_index| %>
          <li class='ui-state-default<%= ' ui-state-active' if part_index == 0 %>'>
            <%= link_to part.to_s.titleize, "##{part}" %>
          </li>
        <% end %>
      </ul>

      <div id='page_part_editors'>
        <% [:description_fi, :description_en].each do |part| %>
          <div class='page_part' id='<%= part %>'>
            <%= f.text_area part, :rows => 20, :class => 'wymeditor widest' -%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  
  
  <div class='field'>
    <%= f.label :sample -%>
    <%= render :partial => "/shared/admin/image_picker", :locals => {
          :f => f,
          :field => :sample_id,
          :image => @exhibition.sample,
          :toggle_image_display => false
        } %>
  
  <div class='field'>
    <%= f.label :starts -%>
    <%= f.date_select :starts  -%>
  </div>
  
  <div class='field'>
    <%= f.label :ends -%>
    <%= f.date_select :ends  -%>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('delete', :scope => 'admin.exhibitions.exhibition'),
                :delete_confirmation => t('message', :scope => 'shared.admin.delete', :title => @exhibition.title_fi)
              } %>
<% end -%>
<% content_for :javascripts do %>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end %>
