<% content_for :body_content_title do %>
  <%= @exhibition.title_fi %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Title Fi</h1>
    <p>
      <%=raw @exhibition.title_fi %>
    </p>
  </section>
  <section>
    <h1>Title En</h1>
    <p>
      <%=raw @exhibition.title_en %>
    </p>
  </section>
  <section>
    <h1>Author</h1>
    <p>
      <%=raw @exhibition.author %>
    </p>
  </section>
  <section>
    <h1>Description Fi</h1>
    <p>
      <%=raw @exhibition.description_fi %>
    </p>
  </section>
  <section>
    <h1>Description En</h1>
    <p>
      <%=raw @exhibition.description_en %>
    </p>
  </section>
  <section>
    <h1>Sample</h1>
    <p>
      <%= image_fu @exhibition.sample, nil %>
    </p>
  </section>
  <section>
    <h1>Starts</h1>
    <p>
      <%=raw @exhibition.starts %>
    </p>
  </section>
  <section>
    <h1>Ends</h1>
    <p>
      <%=raw @exhibition.ends %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="exhibitions">
      <% @exhibitions.each do |exhibition| %>
        <li>
          <%= link_to exhibition.title_fi, exhibition_path(exhibition) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
