<% content_for :body_content_title do %>
  <%= @guestbook_note.writer_name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Writer Name</h1>
    <p>
      <%=raw @guestbook_note.writer_name %>
    </p>
  </section>
  <section>
    <h1>Note</h1>
    <p>
      <%=raw @guestbook_note.note %>
    </p>
  </section>
  <section>
    <h1>Left</h1>
    <p>
      <%=raw @guestbook_note.left %>
    </p>
  </section>
  <section>
    <h1>Response</h1>
    <p>
      <%=raw @guestbook_note.response %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="guestbook_notes">
      <% @guestbook_notes.each do |guestbook_note| %>
        <li>
          <%= link_to guestbook_note.writer_name, guestbook_note_path(guestbook_note) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
